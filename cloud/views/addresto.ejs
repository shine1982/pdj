<h3>Ajouter un restaurant</h3>

<form role="form" action="/submitResto" method="post" id="addRestoForm">
    <div class="form-group upload">
    </div>
    <div class="form-group">
        <label for="restoName">Nom restaurant</label>
        <input type="text" class="form-control" id="restoName" name="restoName" placeholder="Enter le nom d'un restaurant">
    </div>
    <div class="form-group">
        <label for="pdjImage">Une image</label>
        <input type="file" id="pdjImage" name="pdjImage">
    </div>
</form>

<script type="text/javascript">
    new Uploader({ el: "#addRestoForm" });
</script>

<% if(restos.length >0){ %>
