<script type="text/template" id="addresto-template">
<h3>Ajouter un restaurant</h3>

<form role="form" action="/submitResto" method="post" id="addRestoForm">
    <div class="form-group upload">
    </div>
    <div class="form-group">
        <label for="restoName">Nom restaurant</label>
        <input type="text" class="form-control" id="restoName" name="restoName" placeholder="">
    </div>
    <div class="form-group">
        <label for="restoAddress">Adresse</label>
        <input type="text" class="form-control" id="restoAddress" name="restoAddress" placeholder="numÃ©ro, rue, avenue....">
    </div>
    <div class="form-group">
        <label for="restoPostalCode">Code Postal</label>
        <input type="text" class="form-control" id="restoPostalCode" name="restoPostalCode" placeholder="ex. 75001">
    </div>
    <div class="form-group">
