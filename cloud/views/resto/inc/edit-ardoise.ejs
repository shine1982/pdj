<script type="text/template" id="ardoise-template">
    {{if(modify){ }}
    <div id="ardoiseHeaderZone">

        <form role="form">
            <div class="pull-right" style="margin-bottom: 10px;">
                <input type="submit" id="saveArdoiseBtn" class="btn btn-primary" value="Sauvegarder">
            </div>
            <div class="form-group">

                <input type="text" class="form-control" name="ardoiseTitle" id="ardoiseTitle" value="{{=ardoise.get('title')}}" placeholder="Titre de l'ardoise" />

            </div>
            <div class="well" id="zoneFormulePrice">
                <!-- c'est là où on saisit tous les formules avec le prix-->
                <p><button class="addFormulePriceBtn"><i class="fa fa-plus"></i> Ajouter</button></p>
            </div>
        </form>
    </div>
    {{ }else if(!alreadyCreatedArdoise){ }}
        <p>Appuyer ce button <button class="btnCreateArdoise btn btn-success btn-lg">Créer</button> pour créer votre permière ardoise!</p>
    {{ }else{ }}
        <p>Vous n'avez pas encore créé une ardoise pour cette date. Vous pouvez</p>
        <p>Appuyer ce button <button class="btn btn-success btn-lg">Importer</button> pour créer une ardoise en important l'ardoise d'une autre date</p>
        <p>ou</p>
        <p>Appuyer ce button <button class="btnCreateArdoise btn btn-success">Créer</button> pour créer une ardoise à partir de zero</p>
    {{ } }}

</script>
<script type="text/template" id="ardoise-formule-price-template">
    <div class="formulePriceLine">
{{ if(order>3){ }}
   <i class="fa fa-trash fa-lg clear"></i>
{{ } }}
   <label class="formulePriceLabel">{{=label}}</label>
   <input class="formulePriceLabelInput" value="{{=label}}"/>
   <input type="text" value="{{=priceEuro}}" maxlength="5" size="3" class="formulePriceInput" style="text-align:right;" >€
    </div>
</script>